#!/usr/bin/python
"""Run all scripts found in the Munki preflight.d directory."""


import sys

sys.path.insert(0, '/usr/local/sal')
import utils


PREFLIGHT_DIR = '/usr/local/munki/preflight.d'


def main():
    try:
        utils.run_scripts(PREFLIGHT_DIR, sys.argv[1], error=True)
    except RuntimeError as e:
        sys.exit(e)


if __name__ == "__main__":
    main()
